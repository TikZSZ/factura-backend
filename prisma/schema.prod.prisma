model Store {
  store_id      Int          @id @default(autoincrement())
  store_name    String
  country       String
  phone_number  Int
  address       String
  website       String
  status        String       @default("active") 
  timeRegistred String
  seller        User?        @relation(fields: [seller_id], references: [userAccountId])
  seller_id     String
  receiptRefs   ReceiptRef[]
  signature     String
  sequence_no   Int
  timestamp     String
}

model ReceiptRef {
  receipt_id  Int       @id @default(autoincrement())
  time        String
  store_id    Int
  store       Store?    @relation(fields: [store_id], references: [store_id])
  buyer_id    String
  buyer       User?     @relation(fields: [buyer_id], references: [userAccountId])
  products    Product[]
  signature   String
  sequence_no Int
  timestamp   String
}

model Product {
  id             Int         @id @default(autoincrement())
  seq            Int          
  product_name   String
  price          Decimal
  tax            Decimal     @default(0)
  discount       Decimal     @default(0)
  qty            Int         @default(1)
  total          Decimal
  receipt_id     Int
  receipt_refs   ReceiptRef? @relation(fields: [receipt_id], references: [receipt_id])
}
